<Window x:Class="Kviz.ShowResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz"
        mc:Ignorable="d"
        Title="Svi rezultati" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="resultGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Korisnik" Width="200" Binding="{Binding userName}" />
                <DataGridTextColumn Header="Rezultat" Width="200" Binding="{Binding result}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
